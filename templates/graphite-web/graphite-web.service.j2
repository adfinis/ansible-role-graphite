[Unit]
Description=Gunicorn server for graphite-web
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/graphite/webapp/graphite
ExecStart=/opt/graphite/bin/gunicorn wsgi --pythonpath=/opt/graphite/webapp/ --bind 0.0.0.0:8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

